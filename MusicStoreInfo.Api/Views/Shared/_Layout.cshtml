<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MusicStoreInfo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MusicStoreInfo.Api.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">    
    <style>       
        body {
            background-color: #f8f9fa;
            color: #343a40;
            font-weight: bold;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #e9ecef;
            color: #343a40;
        }

        .nav-link {
            color: #343a40;
            text-decoration: none;
        }

            .nav-link:hover {
                color: #000000;
            }

        .dropdown-menu {
            background-color: #f8f9fa;
            color: #343a40;
        }

        .dropdown-item {
            color: #343a40;
            text-decoration: none;
        }

            .dropdown-item:hover {
                background-color: #e9ecef;
                color: #000000;
            }

        .dropdown-toggle::after {
            display: none;
        }

        .dropdown-toggle {
            color: #343a40;
            text-decoration: none;
        }

            .dropdown-toggle:hover {
                color: #000000;
            }

        footer {
            background-color: #e9ecef;
            color: #343a40;
        }

        .nav-container {
            display: flex;
            justify-content: center;
            width: 100%;
        }

            .nav-container .nav {
                display: flex;
                justify-content: center;
            }

        .nav-item {
            margin: 0 10px;
        }

        .center-nav {
            display: flex;
            justify-content: center;
            flex: 1;
        }

        /* Добавляем стили для корректного отображения вложенных меню */
        .dropdown-submenu {
            position: relative;
        }

        .dropdown-submenu .dropdown-menu {
            display: none;
            position: absolute;
            top: 0;
            left: 100%;
            margin-top: -1px;
        }

        .dropdown-submenu:hover .dropdown-menu {
            display: block;
        }

        /* Убираем задержку при наведении */
        .dropdown:hover > .dropdown-menu {
            display: block;
        }

        .dropdown-menu {
            margin-top: 0;
        }

        /* Стили для выпадающего списка профиля */
        .profile-dropdown .dropdown-menu {
            right: 0;
            left: auto;
        }
    </style>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header class="d-flex flex-wrap align-items-center justify-content-between py-3 mb-4 border-bottom">
        <ul class="nav me-auto">
            <li class="nav-item">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2 link-secondary">Главная</a>
            </li>
        </ul>
        <div class="col-md-3 mb-2 mb-md-0">
            <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
                <svg class="bi" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
            </a>
        </div>
        <div class="center-nav">
            <ul class="nav mx-auto">
                @if (User.IsInRole("Client"))
                {
                    <li class="nav-item"><a asp-area="" asp-controller="Product" asp-action="Index" class="nav-link px-2">Альбомы</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Order" asp-action="Index" class="nav-link px-2">Заказы</a></li>
                }
                else if (User.IsInRole("Manager"))
                {
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Каталог</a>
                        <ul class="dropdown-menu text-small">
                            <li><a class="dropdown-item" asp-controller="Album" asp-action="Index">Альбомы</a></li>
                            <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Продукты</a></li>
                            <li><a class="dropdown-item" asp-controller="Store" asp-action="Index">Магазины</a></li>
                            <li><a class="dropdown-item" asp-controller="Song" asp-action="Index">Песни</a></li>
                            <li><a class="dropdown-item" asp-controller="Group" asp-action="Index">Группы</a></li>
                            <li><a class="dropdown-item" asp-controller="Company" asp-action="Index">Компании</a></li>
                            <li><a class="dropdown-item" asp-controller="Member" asp-action="Index">Исполнители</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Отчёты</a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-submenu">
                                <a href="#" class="dropdown-item dropdown-toggle">Простые запросы</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithCondition1">Альбомы компании</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithCondition2">Альбомы группы</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithCondition3">Альбомы вышедшие в опред. период</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithCondition4">Заказы за опред. период</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithoutCondition1">Компании</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithoutCondition2">Группы</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SymmetricInnerJoinWithoutCondition3">Продукты</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="LeftOuterJoin">Альбомы и компании(л)</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="RightOuterJoin">Альбомы и компании(п)</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="SubqueryLeftJoin">Магазины, имеющие заказ в опред. дату</a></li>
                                </ul>
                            </li>
                            <li class="dropdown-submenu">
                                <a href="#" class="dropdown-item dropdown-toggle">Сложные запросы</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="StoresByOwnershipType">Количество магазинов по типам собственности</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="AlbumsBySongCount">Альбомы по датам с кол. песен больше указ.</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="GroupsByTotalSongCount">Группы с кол. песен больше указ. за всё время</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="GroupsBySongCountAndDateRange">Группы с кол. песен больше указ. в опред. время</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="AlbumsByMinSongs">Количество альбомов с мин. кол. песен для каждой группы</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="GroupsByAlbumDateRange">Группы, которые выпустили альбомы в опред. диапазоне дат</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item"><a asp-area="" asp-controller="Order" asp-action="RevenueReport" class="nav-link px-2">Статистика</a></li>
                    <li class="nav-item"><a asp-area="" asp-controller="Order" asp-action="Index" class="nav-link px-2">Заказы</a></li>
                }
                else if (User.IsInRole("Admin"))
                {
                    <li class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Справочники</a>
                        <ul class="dropdown-menu text-small">
                            <li><a class="dropdown-item" asp-controller="Gender" asp-action="Index">Гендеры</a></li>
                            <li><a class="dropdown-item" asp-controller="Specialization" asp-action="Index">Специализации</a></li>
                            <li><a class="dropdown-item" asp-controller="OwnershipType" asp-action="Index">Типы собственности</a></li>
                            <li><a class="dropdown-item" asp-controller="ListenerType" asp-action="Index">Типы прослушивателей</a></li>
                            <li><a class="dropdown-item" asp-controller="City" asp-action="Index">Города</a></li>
                            <li><a class="dropdown-item" asp-controller="District" asp-action="Index">Районы</a></li>
                            <li><a class="dropdown-item" asp-controller="Genre" asp-action="Index">Жанры</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a asp-area="" asp-controller="Admin" asp-action="Index" class="nav-link px-2">Админ-панель</a></li>
                }
            </ul>
        </div>
        <div class="col-md-3 text-end">
            @if (!User.Identity!.IsAuthenticated)
            {
                <a class="btn btn-outline-primary me-2" asp-controller="Account" asp-action="Index">Войти</a>
                <a class="btn btn-primary" asp-controller="Account" asp-action="Register" asp-route-returnUrl="/Account">Регистрация</a>
            }
            else
            {
                <div class="dropdown text-end profile-dropdown">
                    <a href="#" class="d-inline-flex align-items-center link-body-emphasis text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="@Url.Content("~/image/" + User.Claims.FirstOrDefault(c => c.Type == "ImagePath")?.Value)" alt="User Image" width="32" height="32" class="rounded-circle me-2">
                        <span>@User.Identity.Name</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end text-small">
                        <li><a class="dropdown-item" asp-controller="ShoppingCart" asp-action="Index" asp-route-id="@int.Parse(User.Claims.FirstOrDefault(c => c.Type == "ShoppingCartId")?.Value)">Корзина</a></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Профиль</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="/Account">Выйти</a></li>
                    </ul>
                </div>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - MusicStoreInfo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Добавляем JavaScript для корректного отображения вложенных меню
        document.querySelectorAll('.dropdown-submenu').forEach(function (element) {
            element.addEventListener('mouseover', function () {
                const submenu = this.querySelector('.dropdown-menu');
                if (submenu) {
                    submenu.classList.add('show');
                }
            });

            element.addEventListener('mouseout', function () {
                const submenu = this.querySelector('.dropdown-menu');
                if (submenu) {
                    submenu.classList.remove('show');
                }
            });
        });

        // Закрываем открытые подпункты при клике вне меню
        document.addEventListener('click', function (e) {
            if (!e.target.closest('.dropdown-menu')) {
                document.querySelectorAll('.dropdown-submenu .dropdown-menu').forEach(function (submenu) {
                    submenu.classList.remove('show');
                });
            }
        });
    });
</script>