@{
    ViewData["Title"] = "Группы, выпустившие альбомы в определённом диапазоне дат";
}

<h2>Группы, выпустившие альбомы в определённом диапазоне дат</h2>

<form asp-action="GroupsByAlbumDateRange" method="post">
    <div class="form-group">
        <label for="startDate">Дата начала:</label>
        <input type="date" class="form-control" id="startDate" name="startDate" required />
    </div>
    <div class="form-group">
        <label for="endDate">Дата окончания:</label>
        <input type="date" class="form-control" id="endDate" name="endDate" required />
    </div>
    <button type="submit" class="btn btn-primary">Показать группы</button>
</form>